<h1>Create a new item</h1>

<% if @item.errors.any? %>
  <p><strong>Error!</strong> <%= @item.errors.full_messages.to_sentence %></p>
<% end %>

<!-- <form method="POST" action="<%= items_path %>"> -->
<%= form_for @item do |f| %>
  <%= f.text_field :title %>
  <%= f.text_area :description %>
  <%= f.number_field :price_in_cents %>
  <%= f.number_field :quantity_available %>
  <button>Save</button>
<% end %>